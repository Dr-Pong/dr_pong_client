{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "proseWrap": "preserve",
  "endOfLine": "auto",
  "importOrder": [
    "^next/(.*)$",
    "^react(.*)$",
    "^api/(.*)$",
    "^recoils/(.*)$",
    "^types/(.*)$",
    "^hooks/(.*)$",
    "^utils/(.*)$",
    "^pages/(.*)$",
    "^components/(.*)$",
    "^styles/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
